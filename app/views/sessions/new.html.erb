<h1>Login</h1>

<% if flash.now[:alert] %>
  <p><%= flash.now[:alert] %></p>
<% end %>

<%= form_tag sessions_path do %>
  <div>
    <%= label_tag "email" %><br/>
    <%= text_field_tag "email" %>
  </div>
  <div>
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
  </div>
  <div><%= submit_tag "Login" %></div>
<% end %>